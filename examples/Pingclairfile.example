# Pingclairfile Example

# Global options
global {
    protocols H1 H2 H3
    debug false
}

# Simple reverse proxy
example.com {
    listen :80
    reverse_proxy localhost:3000
}

# Multiple upstreams and path matching (Coming soon: more advanced matchers)
api.example.com {
    listen :443
    
    handle /api/* {
        reverse_proxy localhost:8080 localhost:8081
    }
    
    respond "Not Found" 404
}
